S     = .
L     = .
C     = ../hmt_code
X     = /usr/openwin/include
CC    =  gcc

#FLAGS = -fns -dalign -xdepend -fast -xO4 -xtarget=native -xarch=v8plusa -xchip=ultra -Dr8 -DBLAS -DV
FLAGS = -Dr8 -DBLAS -DV

CDFLAGS  = -c -xO0 -g -DV -Dr8

#CFLAGS   = -c -O4 -DMYMALLOC -DV -Dr8
#CFLAGS   = -c -O4 -DV -Dr8

CFLAGS   = -c -fast -xtarget=ultra -DV -Dr8
FDFLAGS  = -c -O0 -g -Mr8
FFLAGS   = -c -fast -xtarget=ultra 

NOBJS = prenek.o curve.o build.o build1.o build2.o bound.o plot.o xinterface.o glomod.o legend.o vprops.o iolib.o subs.o zipper2.o postnek6.o error.o ivec.o queue.o stack.o bss_malloc.o adj_list.o sparse_matrix.o screen.o  revert.o rsb.o mxm.o xdriver.o rsb_driver.o pythag.o tqli.o sorts.o smbwr.o rsb_ex.o


all: prex print


prex:	$(NOBJS)
	cc -o prex $(NOBJS) -L/usr/lib/X11 -lX11 -lm -fast $(FLAGS) -xlic_lib=sunperf 


print:
	size prex


clean:
	'rm' *.o
	'rm' prex



